  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "vue-cli-services test:unit",
      "program": "${workspaceFolder}/node_modules/@vue/cli-service/bin/vue-cli-service",
      "args": ["test:unit", "--runInBand", "--config jest.config.js", "--verbose", "-i", "--no-cache"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/@vue/cli-service/bin/vue-cli-service"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "vue-cli-services test:watch",
      "program": "${workspaceFolder}/node_modules/@vue/cli-service/bin/vue-cli-service",
      "args": ["test:unit", "--runInBand", "--config jest.config.js", "--verbose", "-i", "--no-cache", "--watchAll"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/node_modules/@vue/cli-service/bin/vue-cli-service"
      }
    }
  ]
}
